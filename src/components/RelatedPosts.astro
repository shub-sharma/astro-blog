            <div class="post">
                <h3 class="h4">
                    <a href={post.url}>{post.frontmatter.title}</a>
                </h3>
                <small>
                    by <a href={`/author/${slugify(post.frontmatter.author)}/`}>{post.frontmatter.author}</a>{" "} â€¢ {
                    formatDate(post.frontmatter.date)
