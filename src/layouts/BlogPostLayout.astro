---
// component import
import CategoryCloud from "../components/CategoryCloud.astro";
import PostHeader from "../components/PostHeader.astro";
import RelatedPosts from "../components/RelatedPosts.astro";
import { formatBlogPosts } from "../js/utils";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;

const { title, description, date, category, author, image } = frontmatter;

const allPosts = Object.values(import.meta.glob("../pages/blog/*.md", { eager: true }));
const formattedPosts = formatBlogPosts(allPosts, {
  sortByDate: false
});

const relatedPosts = formattedPosts.filter((post) => post.frontmatter.category.toLowerCase() === category.toLowerCase() && post.frontmatter.title !== title).slice(0, 3);


---

<MainLayout {title} {description} image={frontmatter.image} {frontmatter} robots={frontmatter.robots}>
  <PostHeader {title} {description} {date} {category} {image} {author} />
  <div class="post-content">
    <div class="content">
      <slot />
    </div>
    <div class="sidebar">
      <aside class="container" aria-label="Blog categories">
        <h2 class="h3">Blog Categories</h2>
        <CategoryCloud />
      </aside>
      {
        relatedPosts.length > 0 && (
          <aside class="container" aria-label="Related posts">
              <h2 class="h3">Related Posts</h2>
              <RelatedPosts {relatedPosts}/>
          </aside>
        )
      }
  
    </div>
  </div>
</MainLayout>